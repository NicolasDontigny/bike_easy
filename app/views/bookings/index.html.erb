<h1>Bookings</h1>
<% if @destroy %>
  <div class="" role="">
    Bike successfully deleted
</div>
<% end %>
<div class="">
<% @bookings.each do |booking| %>
  <% booked_user = User.find(booking.user_id) %>
  <% booked_bike = Bike.find(booking.bike_id) %>
  <div class="card-product my-3">
   <%= cl_image_tag booked_bike.photo %>
    <div class="card-product-infos d-flex flex-grow-1">
      <div class="flex-grow-1">
        <p><%= booked_user.first_name%> <%=booked_user.last_name %></p>
        <p>Bike <%= booked_bike.name %></p>
        <p><strong>FROM: </strong> <%= booking.start_date %>
         <strong>   TO: </strong><%= booking.end_date %></p>
        <p>Status <%= booking.confirmed %></p>
      </div>

      <div class="card-buttons d-flex flex-column">
      <% case booking.confirmed %>
      <% when "pending" %>
        <%= link_to 'Confirm', booking_confirm_path(booking), method: 'patch', class: "btn btn-secondary btn-sm" %>
        <%= link_to 'Cancel', booking_cancel_path(booking), method: 'patch',class: "btn btn-secondary btn-sm" %>
      <% when "confirmed" %>
        <%= link_to 'Cancel', booking_cancel_path(booking), method: 'patch',class: "btn btn-secondary btn-sm" %>
      <% when "cancelled" %>
        <% # link_to "Delete", bike_path(bike), method: "delete", class: "btn btn-danger delete-btn" %>
        <%= link_to 'Delete', booking_del_path(booking), method: 'delete',class: "btn btn-danger btn-sm" %>
      <% end %>

      </div>
    </div>
  </div>
<% end %>



