<%= link_to bike_path(bike), class: "map-link" do %>
  <%= cl_image_tag bike.photo, class: "map-image-tag" %>
  <div class="map-img-container">
    <p class="name"><%= bike.name %></p>
    <p class="price"><%= format('%.2f', bike.price) %>$ per day</p>
    <p class="reviews">
      <% bike.rating.times do %>
        <i class="fas fa-star star-green"></i>
      <% end %>
      (<%= rand(100) %> reviews)
    </p>
  </div>
<% end %>


