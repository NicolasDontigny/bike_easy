<%= simple_form_for @bike do |form| %>
  <%= form.input :name %>
  <%= form.input :category, collection: ['mountain', 'road', 'electric', 'fixi', 'bmx'] %>
  <%= form.input :description %>
  <%= form.input :gender, collection: ['M', 'F'] %>
  <%= form.input :size, collection: ['sm', 'md', 'lg'] %>
  <%= form.input :photo %>
  <%= form.input :photo_cache, as: :hidden %>
  <%= form.submit "Create Bike", class: "btn btn-primary" %>
<% end %>
