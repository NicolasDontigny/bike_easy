<%= simple_form_for @bike do |form| %>
  <%= form.input :name %>
  <%= form.input :address, id: 'bike_address' %>
  <%= form.input :category, collection: ['Mountain', 'BMX', 'Road', 'Fixi', 'Electric', 'City', 'Fatbike'] %>
  <%= form.input :price, :label => "Price per Day" %>
  <%= form.input :description %>
  <%= form.input :gender, collection: ['M', 'F'] %>
  <%= form.input :size, collection: ['sm', 'md', 'lg'] %>
  <%= form.input :photo %>
  <%= form.input :photo_cache, as: :hidden %>
  <% if @new %>
    <%= form.submit "Create Bike", class: "btn btn-primary" %>
  <% elsif @edit %>
    <%= form.submit "Update Bike", class: "btn btn-primary" %>
  <% end %>
<% end %>
